.format.row.black-text
  %h2.center Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field.col.s6.center
      %i.material-icons.red-text person
      %br/
      = f.label :苗字
      %span.grey-text (6 characters maximum)
      %br/
      = f.text_field :cust_last_name, autofocus: true
    .field.col.s6.center
      %i.material-icons.red-text person
      %br/
      = f.label :名前
      %span.grey-text (6 characters maximum)
      %br/
      = f.text_field :cust_first_name, autofocus: true

    .field.col.s6.center
      %i.material-icons.red-text email
      %br/
      = f.label :email
      %br/
      = f.email_field :email

    .field.col.s6.center
      %i.material-icons.red-text email
      %br/
      = f.label :gender
      %br/
      = f.text_field :gender
    .field.col.s6.center
      %i.material-icons.red-text email
      %br/
      = f.label :phone
      %br/
      = f.text_field :phone
    .field.col.s6.center
      %i.material-icons.red-text email
      %br/
      = f.label :birth_date
      %br/
      = f.text_field :birth_date
    .field.col.s6.center
      %i.material-icons.red-text email
      %br/
      = f.label :proxy_last_name
      %br/
      = f.text_field :proxy_last_name

    .field.col.s6.center
      %i.material-icons.red-text person
      %br/
      = f.label :proxy_first_name
      %br/
      = f.text_field :proxy_first_name
    .field.col.s6.center
      %i.material-icons.red-text person
      %br/
      = f.label :proxy_email
      %br/
      = f.text_field :proxy_email

    .field.col.s6.center
      %i.material-icons.red-text vpn_key
      %br/
      = f.label :password
      - if @validatable
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password"
    .field.col.s6.center
      %i.material-icons.red-text vpn_key
      %br/
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password"
    .deep-orange.lighten-4.actions.waves-effect.waves-light.btn.right
      = f.submit "Sign up"