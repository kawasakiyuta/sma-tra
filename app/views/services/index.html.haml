- if user_signed_in?
  %h5.center
    %i.material-icons.red-text.small directions_walk
    %span.red.white-text "Services"
  %h6.center.title SmaTra対応サービス一覧
  %blockquote.format

%ul.collection.with-header
  - @services.each do |service|
    .card.row.grid-1
      .card-content
        %span.card-title.activator.grey-text.text-darken-4
          =link_to "/services/#{service.id}" , method: :get do
            = image_tag "/#{service.id}.jpg", size: "30x30", class: ""
            #{service.service_name}